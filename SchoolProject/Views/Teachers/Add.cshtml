
@{
    ViewBag.Title = "Add Teacher";
}
@*https://stackoverflow.com/questions/24763493/how-to-include-js-files-in-the-view-asp-net-mvc-4*@
@Scripts.Render("~/Scripts/Teacher/add-teacher.js")

<h2>Add Teacher</h2>
<form id="addTeacherForm" method="post">
    <div>
        <label for="fName">First Name</label>
        <input type="text" name="fName" id="fName" required minlength="3" placeholder="first name" autofocus />
        <span class="err-msg">First name is required. Minimum 3 characters.</span>
    </div>
    <div>
        <label for="lName">Last Name</label>
        <input type="text" name="lName" id="lName" required minlength="3" placeholder="last name" />
        <span class="err-msg">Last name is required. Minimum 3 characters.</span>
    </div>
    <div>
        <label for="empNo">Employee No</label>
        <input type="text" pattern="^T\d{3}" name="empNo" id="empNo" required placeholder="format: T123" />
        <span class="err-msg">Emp no is required. Emp no match the format T123.</span>
    </div>
    <div>
        <label for="hireDate">Hire date</label>
        <input type="date" name="hireDate" id="hireDate" required />
        <span class="err-msg">Hire date is required. Hire date cannot be later than today</span>
    </div>
    <div>
        <label for="salary">Salary</label>
        <input type="number" name="salary" id="salary" required min="1" placeholder="salary" />
        <span class="err-msg">Salary is required. Salary cannot be less than 0</span>
    </div>
    <button type="submit">Add</button>
</form>

